@page
@model RazorApp_ADO.Pages.Users.UpdateModel
@{
    ViewData["Title"] = "Update";
}
<script src="~/js/validate.js"></script>
<h1>Update</h1>

<h4>User</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" onsubmit="return validate()">
            <div class="form-group">
                <label asp-for="NewUser.ID" class="control-label"></label>
                <input asp-for="NewUser.ID" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="NewUser.FirstName" class="control-label"></label>
                <input asp-for="NewUser.FirstName" class="form-control" oninput="firstNameVal()" />
                <div class="form-text alert-danger" id="FNameMsg"></div>
            </div>

            <div class="form-group">
                <label asp-for="NewUser.LastName" class="control-label"></label>
                <input asp-for="NewUser.LastName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="NewUser.Username" class="control-label"></label>
                <input asp-for="NewUser.Username" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="NewUser.Pass" class="control-label"></label>
                <input asp-for="NewUser.Pass" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="NewUser.Email" class="control-label"></label>
                <input asp-for="NewUser.Email" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="NewUser.Phone" class="control-label"></label>
                <input asp-for="NewUser.Phone" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="NewUser.Birthday" class="control-label"></label>
                <input asp-for="NewUser.Birthday" class="form-control" type="date" />
            </div>
            <div class="form-group">
                <label asp-for="NewUser.Admin" class="control-label"></label>
                <input type="checkbox" asp-for="NewUser.Admin" />
            </div>
            @if (Model.msg != "")
            {
                <div class="form-group">
                    <div class="alert alert-danger" role="alert">
                        @Model.msg
                    </div>
                </div>
            }


            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-primary" />
            </div>
        </form>

    </div>
</div>
